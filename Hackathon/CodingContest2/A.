import java.util.*;
import java.lang.*;
import java.io.*;
public class Main
{
	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		int t = sc.nextInt();
		
		while(t-- != 0)
		{
		    int n = sc.nextInt();
		    
		    int[] arr = new int[n];
		    
		    for(int i = 0 ; i < n ; i++)
		    {
		        arr[i] = sc.nextInt();
		    }
		    
		    for(int i = 0 ; i < n ; i++)
		    {
		        arr[i] = arr[i] - i;
		    }
		    
		    Map<Integer, Integer> map = new HashMap<Integer, Integer>();
		    
		    for(int i = 0 ; i < n ; i++)
		    {
		        if(!map.containsKey(arr[i]))
		        {
		            map.put(arr[i], 1);
		        }
		        else
		        {
		            map.put(arr[i], map.get(arr[i]) + 1);
		        }
		    }
		    
		    Iterator it = map.entrySet().iterator();
		    int ans = 0;
		    while (it.hasNext()) {
                Map.Entry mapElement = (Map.Entry)it.next();
                
                int sec = (int)mapElement.getValue();
                
                if(sec > 1)
                {
                    ans = ans + sec*(sec - 1)/2;
                }
                
            }
            
            System.out.println(ans);
		    
		}
		
	}
}
